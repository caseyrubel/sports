<!-- This is the sign in modal -->

<div id="modalSignUp" class="modal modal-fixed-footer">
  <form action="/" method="POST">
    <div class="modal-content">
    
      <h4>Create Account</h4>

      <div class="row">
        <div class="input-field col s6">
          <input name="first_name" id="first_name" type="text" class="validate">
          <label for="first_name">First Name</label>
        </div>
        <div class="input-field col s6">
          <input name="last_name" id="last_name" type="text" class="validate">
          <label for="last_name">Last Name</label>
        </div>
      </div>

      <div class="row">
        <div class="input-field col s12">
          <input name="email" id="email" type="email" class="validate">
          <label for="email">Email</label>
        </div>
      </div>

      <div class="row">
        <div class="input-field col s6">
          <input name="password" id="password" type="password" class="validate">
          <label for="password">Password</label>
      	</div>

        <div class="input-field col s6">
          <input name="confirm_password" id="confirm_password" type="password" class="validate">
          <label for="confirm_password">Confirm Password</label>
      	</div>
      </div>

      <div class="input-field col s12">
        <select name="teamOne" multiple>
          <option value="" disabled selected>Choose Your NFL Team(s)</option>
          <option value="Patriots">Patriots</option>
          <option value="2">Panthers</option>
          <option value="3">Cardinals</option>
        </select>
        <label>Multiple Football Selection</label>
      </div>

      <div class="input-field col s12">
        <select name="teamTwo" multiple>
          <option value="" disabled selected>Choose Your NBA Team(s)</option>
          <option value="Lakers">Lakers</option>
          <option value="2">Warriors</option>
          <option value="3">Cavaliers</option>
        </select>
        <label>Multiple Basketball Selection</label>
      </div>

      <div class="input-field col s12">
        <select name="teamThree" multiple>
          <option value="" disabled selected>Choose Your MLB Team(s)</option>
          <option value="Yankees">Yankees</option>
          <option value="2">Diamondbacks</option>
          <option value="3">Nationals</option>
        </select>
        <label>Multiple Baseball Selection</label>
      </div>

   	</div>

   	<div class="modal-footer">
      <button href="/sign" class="modal-action modal-close waves-effect waves-green btn-flat">Submit</button>
    </div>
  </form>
</div>
<script>
  $(document).ready(function() {
      $('.modal').modal();
      $('select').material_select();
  });
</script>
 